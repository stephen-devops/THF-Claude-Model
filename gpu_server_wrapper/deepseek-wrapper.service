[Unit]
Description=DeepSeek-R1 Wazuh Wrapper API
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=stephen
WorkingDirectory=/home/stephen
ExecStart=/usr/bin/python3 /home/stephen/deepseek_wazuh_wrapper.py
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=deepseek-wrapper

# Resource limits (adjust as needed)
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
